#Create balansir
resource "vkcs_lb_loadbalancer" "my-lb-2" {
  name = "loadprodbalancer"
  vip_subnet_id = "${vkcs_networking_subnet.subnetwork.id}"  
}

resource "vkcs_networking_floatingip" "lpb_fip" {
