  block_device {
    uuid                  = data.vkcs_images_image.my-ubuntu.id
    source_type           = "image"
    destination_type      = "volume"
    volume_size           = 10
    boot_index            = 0
    delete_on_termination = true
  }

  network {
    uuid = vkcs_networking_network.network.id
    fixed_ip_v4 = "192.168.199.10"
  }

  depends_on = [
