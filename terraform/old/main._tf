resource "vkcs_lb_member" "prod_member_1" {    
  address = "192.168.199.10"
  protocol_port = 80
  pool_id = "${vkcs_lb_pool.prod_pool.id}"
  subnet_id = "${vkcs_networking_subnet.subnetwork.id}"
  weight = 0
